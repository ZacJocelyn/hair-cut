<form class="" action="/vote" method="post" id="hair">
  <div class="row">
    <div class="input-field col s6 offset-s3">
      <input id="name" type="text" class="validate" required name="name">
      <label class="active" for="name">Name</label>
    </div>
  </div>
  <div class="row">
    <p class="col s4 offset-s4 center">
      <input name="style" type="radio" id="short" value="short"/>
      <label for="short">Short</label>
    </p>
    <p class="col s4 offset-s4 center">
      <input name="style" type="radio" id="long" value="long"/>
      <label for="long">Long</label>
    </p>
  </div>
  <div class="row">
    <div class="input-field col s6 offset-s3">
      <input id="color" type="text" class="validate" required name="color">
      <label class="active" for="color">Color</label>
    </div>
  </div>
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6 offset-s3">
          <textarea id="comments" class="materialize-textarea" name="comment"></textarea>
          <label class="active" for="comments">Comments</label>
        </div>
      </div>
    </form>
  </div>
</form>
<div class="row">
  <button type="submit" form="hair" id="submit" class="waves-effect waves-light btn center col s4 offset-s4 center">Submit</button>
</div>
